<h1>Articles</h1>

Total <%= Article.public_count > 1 ? 'Articles' : 'Article' %>: <%= Article.public_count %>

<table class="table table-hover table-sm">
  <tr><th>Title</th><th>Status</th><th>Created Date</th><th>Last Updated</th><th></th><tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.status %></td>
      <td><%= article.created_at %></td>
      <td><%= article.updated_at %></td>
      <td><%= link_to "View", article, class: "btn btn-secondary btn-sm" %></td>
    </tr>
  <% end %>
</table>

<%= link_to "+ Create New Article", new_article_path, class: "btn btn-primary btn-sm" %>
