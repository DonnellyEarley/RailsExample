<%= form_with model: article do |form| %>
  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], {}, {selected: 'public', class: 'form-select w-25'} %>
  </div>
  
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control w-25" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control w-50" %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit nil, :class => "btn btn-primary" %>
  </div>
<% end %>
